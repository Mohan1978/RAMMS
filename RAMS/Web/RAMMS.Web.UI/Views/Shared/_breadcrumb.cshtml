@model RAMMS.Web.UI.Models.BreadCrumb
<div class="row">
    <div class="body-header w-100">
        <div class="col-lg-12">
            <div class="w-100 d-flex justify-content-md-between py-2 align-items-center">
                <span class="mb-0 font-weight-bold font-20">@Model.Title</span>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-alt mb-0 bg-transparent">
                        @for (int i = 0; i < Model.Navigation.Count; i++)
                        {
                            if (i == Model.Navigation.Count - 1)
                            {
                                <li class="breadcrumb-item" aria-current="page">@Model.Navigation[i].Title</li>
                            }
                            else
                            {
                                <li class="breadcrumb-item">@Model.Navigation[i].Title</li>
                            }
                        }
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
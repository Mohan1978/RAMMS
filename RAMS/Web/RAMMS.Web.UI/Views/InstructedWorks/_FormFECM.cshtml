@model RAMMS.Web.UI.Models.FormW2Model;
@using RAMMS.Business.ServiceProvider;

@{ 
    var vd = Model.Fcem != null ? Model.Fcem.DtAgreedNego : null;
    string _AgrdNegoDate = vd.HasValue ? vd.Value.ToString("yyyy-MM-dd") : "";

    vd = Model.Fcem != null ? Model.Fcem.Dt : null;
    string _FCEMDate = vd.HasValue ? vd.Value.ToString("yyyy-MM-dd") : "";

    vd = Model.FormW1 != null ? Model.FormW1.Dt : null;
    string _TCEMDate = vd.HasValue ? vd.Value.ToString("yyyy-MM-dd") : "";

}
<div class="p-4">

    <div class="row">

        <div class="form-group col-lg-3">
            <label for="RMU">TECM Date</label>
            <input type="date" class="datepicker form-control  svalidate {required, TECM date}" id="tcemDate" value="@_TCEMDate" />
        </div>
        <div class="form-group col-lg-3">
            <label>
                FECM Date
            </label>
            <input type="date" class="datepicker form-control  svalidate {required, Issue date}" id="fcemDate" value="@_FCEMDate" />
        </div>
        <div class="form-group col-lg-2 mb-0">
            <label for="RMU">Agreed Nego Price Letter</label>
            <br class="mb-3" />
            <label class="checkbox-inline py-3 px-2"><input type="checkbox" disabled value=""> Yes</label>
            <label class="checkbox-inline"><input type="checkbox" disabled value=""> No</label>

        </div>

        <div class="form-group col-lg-3">
            <label for="RMU">Agreed Nego  Rate Date</label>
            <input type="date" class="datepicker form-control  svalidate {required, FECM date}" id="fcemDate" value="@_AgrdNegoDate" />
        </div>
        <div class="form-group col-lg-3">
            @Html.Label("Status", "Status")
            @Html.DropDownListFor(m => m.Fcem.Sts, (IEnumerable<SelectListItem>)ViewData["TECM_Status"], "Select Status", new { @id = "fcemStatus", @class = "form-control svalidate {required, Status}" })
        </div>
        <div class="form-group col-lg-3">
            <label>
                Status Remarks
            </label>
            @Html.TextAreaFor(m => m.Fcem.StsRemarks, new { @id = "fcemStsRemark", @class = "form-control  svalidate {required, Remark }" })
        </div>

        <div class="form-group col-lg-3">
            <label for="RMU">PROGRESS %</label>
            @Html.TextBoxFor(m => m.Fcem.ProgressPerc, new { @id = "fcemProgress", @class = "form-control  svalidate {required, PROGRESS % }" })
        </div>

        <div class="form-group col-lg-3 px-4">
            <div class="row mt-4">
                @{
                    var _BQ = Model.Fcem.IsBq == null || Model.Fcem.IsBq == false ? false : true;

                }
                <div class="col-6 ">
                    <label class="checkbox-inline"><input type="checkbox" id="fcemBQ" checked="@_BQ"> BQ</label>
                </div>

                @{
                    var _Drawing = Model.Fcem.IsDrawing == null || Model.Fcem.IsDrawing == false ? false : true;

                }
                <div class="col-6">
                    <label class="checkbox-inline"><input type="checkbox" id="fcemDrawing" checked="@_Drawing"> Drawing</label>
                </div>
            </div>
        </div>




        <div class="form-group col-lg-12">
            <label for="RMU"> Remarks</label>
            @Html.TextAreaFor(m => m.Fcem.Remark, new { @id = "fcemRemark", @class = "form-control  svalidate {required, Remark }" })
        </div>





    </div>

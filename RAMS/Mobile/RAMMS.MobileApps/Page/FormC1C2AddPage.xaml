<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Condition Inspection - Form C1/C2"
             xmlns:forms="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"
             xmlns:page="clr-namespace:RAMMS.MobileApps.Page"
             xmlns:local="clr-namespace:RAMMS.MobileApps"
             xmlns:locals="clr-namespace:RAMMS.MobileApps.Controls;assembly=RAMMS.MobileApps"
             x:Class="RAMMS.MobileApps.Page.FormC1C2AddPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:NegateBoolConverter x:Key="NegatebooleanConverter" />
            <page:C1C2ImageSrcConverter x:Key="C1C2ImageSrcConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>

            <Frame Margin="0,0,0,0" HasShadow="True" BorderColor="#e6e6e6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="JKRSLogo.png" Grid.Row="0" Grid.Column="0" Margin="0,-10,0,0"/>
                    <Label Text="ROAD ASSET MANAGEMENT AND MAINTENANCE SYSTEM" LineBreakMode="TailTruncation" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" TextColor="Black" FontAttributes="Bold" FontSize="Large" Grid.Row="0" Grid.Column="2"  Margin="0,-10,0,0"/>
                    <Image Source="ECSBLogo.png" Grid.Row="0" Grid.Column="4"  Margin="0,-10,0,0"/>


                </Grid>
            </Frame>
            <StackLayout>
                <Frame>
                    <StackLayout>
                        <Grid>
                            <Grid.RowDefinitions>

                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="2"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                                <Label   Text="Form C1/C2 No" FontSize="Large"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="3"  ColorName="LightGray"    BorderColor="Black" >
                                    <Label   Text="{Binding SelectedRefNo}" FontSize="Large"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />
                                </locals:FrameRenders>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Frame>
            </StackLayout>

            <ScrollView>
                <StackLayout >

                    <Frame  BackgroundColor="White" BorderColor="#bfbfbf" CornerRadius="5"  Margin="5,0,5,0"  >
                        <StackLayout>
                            <Grid RowSpacing="15" ColumnSpacing="9" IsVisible="{Binding FromAdd}"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />

                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>


                                <Label Text="Division" Grid.Row="0" Grid.Column="1"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />
                                <locals:FrameRenders Grid.Row="1"  Grid.Column="1" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDDivisionListItems}" ItemDisplayBinding="{Binding Text}" SelectedIndex="{Binding SelectedDivision, Mode=TwoWay}"  IsEnabled="{Binding IsHeaderEnable}" CharacterSpacing="20"  Title="Select Division"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"  HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>





                                <Label Text="RMU" Grid.Row="0" Grid.Column="2"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="1"  Grid.Column="2" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDRMUListItems}" ItemDisplayBinding="{Binding Text}" SelectedItem="{Binding SelectedRMU, Mode=TwoWay}" IsEnabled="{Binding IsHeaderEnable}" Title="Select RMU"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"   HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>


                                <Label Text="Section Code"  Grid.Row="0" Grid.Column="3"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="1"  Grid.Column="3" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDSectionListItems}" ItemDisplayBinding="{Binding Text}" SelectedItem="{Binding SelectedSectionCode, Mode=TwoWay}" IsEnabled="{Binding IsHeaderEnable}" Title="Select Section Code"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"   HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>


                                <Label Text="Section Name" Grid.Row="0" Grid.Column="4"  FontSize="Medium"   FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                               
                                <locals:FrameRenders Grid.Row="1"  Grid.Column="4" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:EntryControl  IsEnabled="{Binding IsHeaderEnable}" Text="{Binding SelectedSectionName}" FontAttributes="Bold" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default" />
                                </locals:FrameRenders>

                                <Label Text="Road Code" Grid.Row="2" Grid.Column="1"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />


                                <locals:FrameRenders Grid.Row="3"  Grid.Column="1" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker  ItemsSource="{Binding DDRodeCodeListItems}"  ItemDisplayBinding="{Binding Text}"  SelectedItem="{Binding SelectedRoadCode, Mode=TwoWay}" IsEnabled="{Binding IsHeaderEnable}" Title="Select Road Code"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"    TextColor="Black" />
                                </locals:FrameRenders>

                                <Label Text="Road Name" Grid.Row="2" Grid.Column="2"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                               
                                <locals:FrameRenders Grid.Row="3"  Grid.Column="2" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:EntryControl IsEnabled="{Binding IsHeaderEnable}" Text="{Binding SelectedRoadName}"  TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"  InputTransparent="True" />
                                </locals:FrameRenders>


                                <Label Text="Asset ID"  Grid.Row="2" Grid.Column="3"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="3"  Grid.Column="3" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDAssetListItems}" ItemDisplayBinding="{Binding Text}" SelectedIndex="{Binding SelectedAsset, Mode=TwoWay}"  IsEnabled="{Binding IsHeaderEnable}"  Title="Select Asset ID"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"   HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>


                                <Label Text="Year of Inspection (YYYY)" Grid.Row="2" Grid.Column="4"  FontSize="Medium"   FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="3"  Grid.Column="4" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDYearListItems}" ItemDisplayBinding="{Binding Text}" SelectedIndex="{Binding SelectedYear, Mode=TwoWay}"  IsEnabled="{Binding IsHeaderEnable}" CharacterSpacing="20"  Title="Select Year"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"   HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>

                                <Button Grid.Row="4"   Grid.Column="4" HorizontalOptions="End" VerticalOptions="End" TextColor="White" Command="{Binding OKCommand}" CornerRadius="10" FontSize="17" BackgroundColor="#1D2D50" Text="Find Details"></Button>
                            </Grid>
                            <Grid  IsVisible="{Binding FromAdd, Converter={StaticResource NegatebooleanConverter}}" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />

                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Text="Asset ID"  Grid.Row="0" Grid.Column="0"  FontSize="Medium"  FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="1"  Grid.Column="0" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                    <local:EntryControl HeightRequest="40" Text="{Binding AiAssetId}"  IsEnabled="{Binding IsHeaderEnable}"   ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"  HorizontalOptions="FillAndExpand" TextColor="Black" />
                                </locals:FrameRenders>

                                <Label Text="Year of Inspection (YYYY)" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" FontSize="Medium"   FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="#000" />

                                <locals:FrameRenders Grid.Row="1"  Grid.Column="1" BackgroundColor="White" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"  BorderColor="Black" >
                                    <local:ExtendedPicker ItemsSource="{Binding DDYearListItems}" ItemDisplayBinding="{Binding Text}" SelectedIndex="{Binding SelectedYear, Mode=TwoWay}"   IsEnabled="{Binding IsHeaderEnable}" ClassId ="ClassPickGrey"  VerticalOptions="CenterAndExpand"  InputTransparent="{Binding NotToEdit}"  HorizontalOptions="FillAndExpand" TextColor="Gray"/>
                                </locals:FrameRenders>

                            </Grid>
                        </StackLayout>
                    </Frame>



                    <Frame  >
                        <StackLayout Margin="0,-15,0,0">
                            <!--<Frame CornerRadius="30">-->
                            <Grid>
                                <Grid.RowDefinitions>

                                    <RowDefinition Height="50"/>

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button  x:Name="btnaddform" BorderColor="#1D2D50" BorderWidth="2"  Text="Form C1" FontSize="Medium" CornerRadius="10"  Command="{Binding AddButtonCommand}" Margin="15,0,15,0" Grid.Row="0" HeightRequest="175"   Grid.Column="0" >
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                 Binding="{Binding IsPhotoTabVisible}" Value="False">
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BackgroundColor" Value="#1D2D50" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                                 Binding="{Binding IsPhotoTabVisible}" Value="True">
                                            <Setter Property="TextColor" Value="#1D2D50" />
                                            <Setter Property="BackgroundColor" Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button  x:Name="btnPhoto" Text="Form C2" BorderWidth="2"  BorderColor="#1D2D50" CornerRadius="10" Command="{Binding PhotoButtonCommand}" Grid.Row="0" Margin="15,0,15,0" HeightRequest="175" FontSize="Medium" Grid.Column="1" >
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                 Binding="{Binding IsPhotoTabVisible}" Value="True">
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BackgroundColor" Value="#1D2D50" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                                 Binding="{Binding IsPhotoTabVisible}" Value="False">
                                            <Setter Property="TextColor" Value="#1D2D50" />
                                            <Setter Property="BackgroundColor" Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                            <!--</Frame>-->
                        </StackLayout>
                    </Frame>


                    <StackLayout x:Name="stack1" Margin="0,-30,0,0" IsVisible="{Binding IsPhotoTabVisible, Converter={StaticResource NegatebooleanConverter}}">
                        <StackLayout>
                            <Frame BorderColor="Gray" CornerRadius="12" BackgroundColor="White" HasShadow="True" Margin="10">
                                <StackLayout>

                                    <StackLayout >
                                        <Frame BackgroundColor="#f2f2f2" HasShadow="True" BorderColor="#e6e6e6">
                                            <StackLayout Orientation="Horizontal">
                                                <Image x:Name="formToggleImage" Source="RoundedAddIcon.png" HeightRequest="35" WidthRequest="35" VerticalOptions="Start" HorizontalOptions="Start">
                                                </Image>
                                                <Label Text="Asset Identification" Margin="10,0,0,0" FontSize="Large" TextColor="Black" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">

                                                </Label>
                                            </StackLayout>
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference FormDLayout}"/>
                                                <TapGestureRecognizer Command="{Binding ToggleCommand}" CommandParameter="{x:Reference formToggleImage}"/>
                                            </Frame.GestureRecognizers>
                                        </Frame>

                                        <Frame x:Name="FormDLayout"  Margin="0,0,0,0" BackgroundColor="White"   HasShadow="True" BorderColor="#bfbfbf"  IsVisible="False" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                            <StackLayout>
                                                <Grid RowSpacing="15"  ColumnSpacing="15" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />

                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />

                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                   

                                                    <Label Text="Division" Grid.Row="2" Grid.Column="1"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="3"  Grid.Column="1" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiDivCode}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"  />
                                                    </locals:FrameRenders>


                                                    <Label Text="RMU" Grid.Row="2" Grid.Column="2"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="3"  Grid.Column="2" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiRmuName}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
                                                    </locals:FrameRenders>



                                                    <Label Text="Road Code" Grid.Row="2" Grid.Column="3"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="3" Grid.Column="3" HeightRequest="40"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiRdCode}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
                                                    </locals:FrameRenders>


                                                    <Label Text="Road Name" Grid.Row="2" Grid.Column="4"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="3" Grid.Column="4"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl   Text="{Binding AiRdName}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}" Keyboard="Default"   />
                                                    </locals:FrameRenders>

                                                </Grid>

                                                <Grid RowSpacing="15"  ColumnSpacing="15" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />


                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="0.5*" />
                                                        <ColumnDefinition Width="0.5*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />

                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>



                                                    <Label Text="Structure Code" Grid.Row="0" Grid.Column="1"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="1" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiStrucCode}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default" />
                                                    </locals:FrameRenders>


                                                    <Label Text="Location CH" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="2" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiLocChKm}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default" />
                                                    </locals:FrameRenders>
                                                    <Label Text="+" Grid.Row="1" Grid.Column="3"   Margin="-14,3,0,0"  FontSize="Large"   TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="3" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiLocChM}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default" />
                                                    </locals:FrameRenders>


                                                    <Label Text="Culvert Length" Grid.Row="0" Grid.Column="4"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1" Grid.Column="4" HeightRequest="40"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiLength}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
                                                    </locals:FrameRenders>


                                                    <Label Text="Culvert Material" Grid.Row="0" Grid.Column="5"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1" Grid.Column="5"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl   Text="{Binding AiMaterial}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
                                                    </locals:FrameRenders>

                                                </Grid>




                                                <Grid RowSpacing="15"  ColumnSpacing="15" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />


                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />

                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>


                                                    <Label Text="Finished Road Level (m)" Grid.Row="0" Grid.Column="1"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="1" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiFinRdLevel}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
                                                    </locals:FrameRenders>


                                                    <Label Text="Catchment Area (Sq.Km)" Grid.Row="0" Grid.Column="2"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="2" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiCatchArea}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}" Keyboard="Default"   />
                                                    </locals:FrameRenders>



                                                    <Label Text="Culvert Skew" Grid.Row="0" Grid.Column="3"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1" Grid.Column="3" HeightRequest="40"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiSkew}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}" Keyboard="Default"   />
                                                    </locals:FrameRenders>


                                                    <Label Text="Culvert Type" Grid.Row="0" Grid.Column="4"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1" Grid.Column="4"  BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl   Text="{Binding AiGrpType}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}" Keyboard="Default"   />
                                                    </locals:FrameRenders>

                                                </Grid>






                                                <Grid RowSpacing="15"  ColumnSpacing="15" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />


                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="1*" />

                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>


                                                    <Label Text="Design Flow (Cu.m/s)" Grid.Row="0" Grid.Column="1"    FontSize="Medium" FontFamily="{StaticResource ProximaNovaRegularFont}" TextColor="Black" />

                                                    <locals:FrameRenders Grid.Row="1"  Grid.Column="1" HeightRequest="40" BackgroundColor="#f2f2f2" FrameCornerRadius="7"   IsClippedToBounds="True" Padding="0,0,0,0"  ColorName="LightGray"    BorderColor="Black" >
                                                        <local:EntryControl    Text="{Binding AiDesignFlow}" TextColor="Black" ClassId="ClassDetails" FontFamily="{StaticResource ProximaNovaRegularFont}"  Keyboard="Default"   />
